    e.preventDefault();
    loginScreen.classList.remove('active');
    signupScreen.classList.add('active');
    updateAuthStatus(loginStatus, '', 'hidden'); // Clear status messages on switch
    updateAuthStatus(signupStatus, '', 'hidden');
});

